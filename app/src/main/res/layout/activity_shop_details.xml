<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopDetailsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/shop_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop name"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_details_phno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop phno"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_details_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop address"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_details_approved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop status"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_details_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="shop type"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/shop_details_distribution_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="distribution code"
            android:textSize="17sp"
            android:layout_marginTop="5dp"/>



        <Button
            android:id="@+id/give_approval"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/upload_btn"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="give approval"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="select shop type :"
            android:layout_marginTop="15dp"/>

        <RadioGroup
            android:id="@+id/typeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/own"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="own shop"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/distributed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="distributed shop"/>
        </RadioGroup>

        <EditText
            android:id="@+id/distributed_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter distribution code"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="text"/>

        <Button
            android:id="@+id/save_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/upload_btn"
            android:text="save change"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bank name:"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter bank name"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bank number:"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>
        <EditText
            android:id="@+id/bank_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter bank number"
            android:inputType="number"/>

        <Button
            android:id="@+id/save_bank_detials"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/upload_btn"
            android:text="save bank detials"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>